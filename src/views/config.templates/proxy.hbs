{{#>proxy}}
location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_pass http://{{#if host}}{{host}}{{else}}localhost{{/if}}:{{port}};
}
{{/proxy}}
{{#>serverName}}
server_name
    {{domain}}
    {{#if idiotProof}}www.{{domain}}{{/if}}
    {{#each aliases}}{{this}} {{/each}};
{{/serverName}}

{{#if leDomain}}
server {
	server_name {{domain}};
    {{>proxy}}

	listen [::]:443 ssl;
	listen 443 ssl;
	ssl_certificate /etc/letsencrypt/live/{{leDomain}}/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/{{leDomain}}/privkey.pem;
	include /etc/letsencrypt/options-ssl-nginx.conf;
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}
{{else}}
server {
    listen 80;
	listen [::]:80;
    {{>serverName}}
}
{{/if}}

{{#if leUpgrade}}
server {
	listen 80;
	listen [::]:80;

	{{>serverName}}
    return 301 https://{{domain}}$request_uri;
}
{{/if}}
